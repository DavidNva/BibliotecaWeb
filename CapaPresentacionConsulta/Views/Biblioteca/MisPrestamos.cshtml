@model List<CapaEntidad.EN_DetallePrestamo>
@{
    ViewBag.Title = "MisPrestamos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-sm-12">
            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <h6>ID PRESTAMO: @item.oId_Libro.Codigo</h6>
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        @*<th>Imagen</th>*@
                                                        <th>Codigo</th>
                                                        <th>Libro</th>

                                                        <th>Cantidad</th>
                                                        <th>Sub Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white">
                                                    <tr>
                                                        @*<td>
                                                            <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.oId_Libro.Extension;base64,@item.oId_Libro.Base64" style="width:120px; height:120px" />
                                                        </td>*@

                                                        <td valign="middle">
                                                            @item.oId_Libro.Codigo
                                                        </td>

                                                        <td valign="middle">
                                                            @item.oId_Libro.Titulo
                                                        </td>

                                                        <td valign="middle">
                                                            @item.CantidadEjemplares
                                                        </td>
                                                        <td valign="middle">
                                                            $ @item.Total Libros
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-sm-12 text-center">
                            <h1>No se encontraron compras</h1>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

